<!DOCTYPE html>
<html>
<head>
    <title>Welcome Page</title>
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script>
        function start() {
            $.ajax({
                type: "GET",
                url: "/User/GetCurrentUser",
                datatype: "json",
                success: function (data) {
                    if (data.currentUser != null) {
                        $("#userName").text("Your are logged in as " + data.currentUser + " with User Id: " + data.currentUserId + " as Role: " + data.currentUserRole);
                    }
                    else {
                        console.log("No user received");
                    }
                },
                error: function (data) {
                    console.log("No user received");
                }
            });
        }
       
        function getStudents() {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: "GET",
                    url: "/User/GetStudents",
                    datatype: "json",
                    success: function (data) {
                        if (data != null) {
                            resolve(JSON.parse(data));
                        }
                    },
                    error: function (error) {
                        reject("No Students");
                    }
                });
            });
        }

        function fillTables() { 
            getStudents().then((response) => {
                if (response) {
                    $.each(response, function (key, value) {
                        let studentDetail = value;
                        let studentRow = document.createElement("tr");
                        $.each(Object.keys(studentDetail), function (key, value) {
                            var studentData = document.createElement("td");
                            studentData.textContent = studentDetail[value];
                            studentRow.append(studentData);

                        });
                        $("#student-table").append(studentRow);
                    });
                }
            }).catch((error) => {
                console.log(error);
            });
            
        }
    </script>
    <style>
        #student-table, td, tr{
            border: 1px solid black;
        }
    </style>
</head>
<body onload="start()">
    <h2>Admin Page</h2>
    <p id="userName">You are logged in as </p>
    <a href="/Student/Register">Student Registration</a>
    <a href="/User/Register">User Registration</a>
    <a href="/User/Login">User Login</a>
    <button onclick="getStudents()">GetStudents</button>
    <button onclick="fillTables()">fillTables</button>
    <table id="student-table">
        <tr>
            <th>StudentID</th>
            <th>FirstName</th>
            <th>Last Name</th>
            <th>NID</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>User ID</th>
            <th>Status</th>
        </tr>     
    </table>
</body>
</html>